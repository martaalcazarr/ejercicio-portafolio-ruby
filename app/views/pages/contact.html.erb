<div class="container">
  <h2 class="text-center m-4">Contacto</h2>
  <%= form_with(url: '/pages/contact', method: 'post', local: true) do |form| %>
    <div class="mb-3">
      <%= form.label :name, 'Nombre' %>
      <%= form.text_field :name, class: 'form-control' %>
    </div>
    <div class="mb-3">
      <%= form.label :email, 'Email' %>
      <%= form.email_field :email, class: 'form-control' %>
    </div>
    <div class="mb-3">
      <%= form.label :message, 'Mensaje' %>
      <%= form.text_area :message, class: 'form-control' %>
    </div>
    <%= form.submit 'Enviar', class: 'button' %>
  <% end %>
</div>
